# ── Backend Providers (injected from router.yaml) ─────────────────────
__PROVIDERS__

# Domain classifier — only model downloaded (~500MB BERT-base + LoRA)
classifier:
  category_model:
    model_id: "models/mom-domain-classifier"
    threshold: 0.6
    use_cpu: true
    use_modernbert: false
    use_mmbert_32k: false
    category_mapping_path: "models/mom-domain-classifier/category_mapping.json"
    fallback_category: "other"

categories:
  - name: "computer science"
    description: "Computer science, programming, and software engineering"
    mmlu_categories: ["computer science"]
  - name: "engineering"
    description: "Engineering and technical problem-solving"
    mmlu_categories: ["engineering"]
  - name: "other"
    description: "General knowledge and all other topics"
    mmlu_categories:
      - "math"
      - "physics"
      - "biology"
      - "chemistry"
      - "health"
      - "business"
      - "law"
      - "psychology"
      - "history"
      - "economics"
      - "philosophy"
      - "other"

decisions:
  - name: "coding"
    priority: 100
    rules:
      operator: "OR"
      conditions:
        - type: "domain"
          name: "computer science"
        - type: "domain"
          name: "engineering"
    modelRefs:
      - model: "__MODEL_0__"
        use_reasoning: false

  - name: "general"
    priority: 1
    rules:
      operator: "OR"
      conditions:
        - type: "domain"
          name: "other"
    modelRefs:
      - model: "__MODEL_1__"
        use_reasoning: false

# Explicitly disabled — each saves ~2.5GB of model downloads
semantic_cache:
  enabled: false
hallucination_mitigation:
  enabled: false
prompt_guard:
  enabled: false
factcheck:
  enabled: false
feedback_detector:
  enabled: false
